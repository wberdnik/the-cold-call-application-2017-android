<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="true"
                                                 tools:context="com.leadinka.android.coldcall.ColdCallActivity">


    <LinearLayout
        android:id="@+id/master_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

        </android.support.design.widget.AppBarLayout>




        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="192dp"
                android:layout_height="92dp"
                android:layout_gravity="bottom|right"
                android:background="#000000"/>

            <TextView
                android:id="@+id/status"
                style="@style/Base.Animation.AppCompat.Dialog"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_gravity="bottom|right"
                android:background="#4499cc"
                android:text="ТЕКУЩИЙ СТАТУС"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:visibility="invisible"
                android:indeterminateDrawable="@drawable/ccc_progress"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/breakB"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_gravity="center|right"
                android:background="#330000"
                android:text="@string/break_button"
                android:textColor="#ffffff"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/main"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:layout_gravity="top|right"
                android:background="#008800"
                android:text="@string/master_init_button"
                android:visibility="invisible"/>

            <ImageButton
                android:id="@+id/call"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_gravity="top|right"
                android:background="@android:color/white"
                android:contentDescription=""
                android:src="@drawable/my_dialog_phone"
                android:visibility="invisible"/>


            <ImageButton
                android:id="@+id/cronetab"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_gravity="top|left"
                android:background="@android:color/white"
                android:src="@drawable/btn_exit"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/lead"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|left"
                android:background="#ff0000"
                android:text="@string/lead_button"
                android:textColor="@android:color/black"
                android:visibility="invisible"/>

            <ImageButton
                android:id="@+id/money"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|left"
                android:src="@drawable/money"
                android:background="#ffffff"
                android:visibility="invisible"/>

        </FrameLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
